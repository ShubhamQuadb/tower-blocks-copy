{
  "version": "1.0.0",
  "name": "Tower Blocks STB",
  "short_name": "TowerBlocks",
  "package": "com.kaifoundry.towerblocksSTB",
  "description": "Stack blocks to build the tallest tower - Set-Top Box Edition",
  "launch_path": "/index.html",
  "icons": {
    "128": "/icons/icon-128.png",
    "256": "/icons/icon-256.png",
    "512": "/icons/icon-512.png"
  },
  "developer": {
    "name": "KaiFoundry",
    "url": "https://www.kaifoundry.com"
  },
  "type": "web",
  "default_locale": "en-US",
  "orientation": "landscape",
  "display": "fullscreen",
  "permissions": {
    "storage": {
      "description": "Required to store game progress"
    },
    "audio-channel-content": {},
    "systemXHR": {
      "description": "Required for JioGames API"
    }
  },
  "cursor": {
    "mode": "tab"
  },
  "device_type": "stb",
  "target_platforms": ["jio-stb", "smart-tv"],
  "categories": [
    "games",
    "entertainment"
  ]
}




